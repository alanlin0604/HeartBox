# Django
DJANGO_SECRET_KEY=your-secret-key-here
DJANGO_DEBUG=False
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# Database (Neon PostgreSQL — omit to use SQLite)
DATABASE_URL=postgresql://user:pass@host/db?sslmode=require

# Encryption (generate: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())")
ENCRYPTION_KEY=

# AI
OPENAI_API_KEY=sk-xxxxx
OPENAI_MODEL=gpt-4o-mini

# ChromaDB
CHROMA_PERSIST_DIR=./chroma_db

# Redis (for WebSocket channel layer — omit for InMemory)
REDIS_URL=

# CORS / CSRF (production only)
CORS_ALLOWED_ORIGINS=http://localhost:5173
CSRF_TRUSTED_ORIGINS=http://localhost:5173
FRONTEND_URL=http://localhost:5173

# Email (omit EMAIL_BACKEND for console backend in development)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=
EMAIL_PORT=587
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
EMAIL_USE_TLS=True
DEFAULT_FROM_EMAIL=noreply@heartbox.app

# Rate limiting (optional overrides)
THROTTLE_USER=200/hour
THROTTLE_LOGIN=10/hour
THROTTLE_REGISTER=5/hour
THROTTLE_PASSWORD_RESET=5/hour
